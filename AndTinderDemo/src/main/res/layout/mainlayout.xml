<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewFlipper"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">
        <include android:id="@+id/signin" layout="@layout/signin"></include>
        <include android:id="@+id/signup" layout="@layout/signup"></include>
        <include android:id="@+id/cards" layout="@layout/cards"></include>
        <include android:id="@+id/match" layout="@layout/match"></include>
    </ViewFlipper>
</LinearLayout>